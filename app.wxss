

/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page {
  background: #f5f5f5;
}

.wrap {
  padding: 20rpx;
}

movable-area {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0
}

movable-view {
  width: 50px;
  height: 50px;
  background: #69d2e7;
  border-radius: 50%;
  bottom: 20px;
  right: 20px;
  position: fixed
}
